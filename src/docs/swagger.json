{
    "openapi": "3.0.0",
    "info": {
        "title": "Bookora Rest API",
        "version": "1.0.0",
        "description": "Your joyful library management system."
    },
    "servers": [
        {
            "url": "http://localhost:3300",
            "description": "Local server"
        }
    ],
    "paths": {
        "/api/book": {
            "get": {
                "summary": "Get all book",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Book name",
                        "name": "book_name",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of book",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "x-order": "0",
                                            "example": true
                                        },
                                        "status": {
                                            "type": "integer",
                                            "x-order": "0",
                                            "example": 200
                                        },
                                        "message": {
                                            "type": "string",
                                            "x-order": "1",
                                            "example": "success"
                                        },
                                        "count": {
                                            "type": "number"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Book"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Book": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "book_name": {
                        "type": "string"
                    },
                    "book_cover": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "book_author": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "author_code": {
                                "type": "string"
                            },
                            "author_name": {
                                "type": "string"
                            }
                        }
                    },
                    "book_category": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "category_code": {
                                "type": "string"
                            },
                            "category_name": {
                                "type": "string"
                            }
                        }
                    },
                    "book_publisher": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "publisher_code": {
                                "type": "string"
                            },
                            "publisher_name": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}
